GPG_SIGNING_KEY:=A8B78637C10E5FC5306D8C63354783CF5CD9EE77

build: sichuan-cookbook.pdf

all: pdf

pdf: book-cover.pdf sichuan-cookbook.pdf

signed: book-cover.s.pdf sichuan-cookbook.s.pdf

distilled: book-cover.d.pdf sichuan-cookbook.d.pdf

outlined: book-cover.o.pdf sichuan-cookbook.o.pdf

print: book-cover.o.pdf sichuan-cookbook-i.o.pdf

zip: sichuan-cookbook-pdf.zip

sichuan-cookbook-pdf.zip: book-cover.pdf sichuan-cookbook.pdf
	zip -9 $@ $^

sichuan-cookbook.xdv: sichuan-cookbook.tex cookbook.cls git-revision.tex \
	half-title.tex frontispiece.tex title-page.tex copyright.tex \
	chairman-mao-quotes.tex title-page-1972.tex preface.tex \
	$(wildcard recipe-*.tex) collation-notes.tex colophon.tex \
	front-cover.pdf quux-logo.pdf \
	sagittaria-sagittifolia.pdf zanthoxylum-planispinum.pdf \
	illustration-001.pdf illustration-002a.pdf illustration-002b.pdf \
	illustration-002c.pdf illustration-003.pdf illustration-004.pdf \
	illustration-005.pdf illustration-006.pdf illustration-007.pdf \
	illustration-008.pdf illustration-009.pdf illustration-010.pdf \
	illustration-011.pdf back-cover.pdf tinker-index.sh
	$(RM) $(subst .tex,.aux,$<) $(subst .tex,.toc,$<)
	xelatex -no-pdf $< $(word 2,$^)
	bash tinker-index.sh $(subst .tex,.idx,$<)
	makeindex $(subst .tex,.idx,$<)
	xelatex -no-pdf $< $(word 2,$^)
	bash tinker-index.sh $(subst .tex,.idx,$<)
	makeindex $(subst .tex,.idx,$<)
	xelatex -no-pdf $< $(word 2,$^)
	bash tinker-index.sh $(subst .tex,.idx,$<)

git-revision.tex: $(wildcard *.cls) $(wildcard *.eps) \
	$(filter-out git-revision.tex, $(wildcard *.tex))
	echo '% Autogenerated, do not edit' >$@
	echo '\\newcommand{\\gitcommitname}{'`git describe --tags \
		$$(git log -1 --format=%H)`'}' >>$@
	echo '\\newcommand{\\gitcommithash}{'`git log -1 \
		--format=%H`'}' >>$@
	echo '\\newcommand{\\gitcommitterdate}{'`git log -1 \
		--format=%ci --date=short`'}' >>$@
	echo '\\newcommand{\\pdfbuilddate}{'`date \
		"+%Y-%m-%d %H:%M:%S %z"`'}' >>$@
	echo '\\newcommand{\\pdfbuildhost}{'`hostname -s`'}' >>$@

front-cover.xdv: front-cover.tex cookbook.cls cover-illustration.pdf

back-cover.xdv: back-cover.tex cookbook.cls back-cover-background.pdf \
	quux-logo.pdf

book-cover.xdv: book-cover.tex git-revision.tex \
	front-cover.pdf back-cover.pdf quux-logo.pdf position-indicator.pdf

sichuan-cookbook-i.o.pdf: sichuan-cookbook.pdf
	gs -dBATCH -dNOCACHE -dNOPAUSE -dSAFER \
		-dAutoRotatePages=/None \
		-dFirstPage=3 -dLastPage=350 \
		-dNoOutputFonts \
		-sDEVICE=pdfwrite -r600 \
		-sOutputFile=$@ $^

%.s.pdf: %.pdf
	cat $^ >$^.tmp
	gpg --export -a $(GPG_SIGNING_KEY) >>$^.tmp
	gpg --clear-sign --not-dash-escaped \
		--local-user $(GPG_SIGNING_KEY) \
		--output=$@ $^.tmp
	$(RM) $^.tmp

%.d.pdf: %.pdf
	gs -dBATCH -dNOCACHE -dNOPAUSE -dSAFER \
		-dAutoRotatePages=/None \
		-sDEVICE=pdfwrite -r600 \
		-sOutputFile=$@ $^

%.o.pdf: %.pdf
	gs -dBATCH -dNOCACHE -dNOPAUSE -dSAFER \
		-dAutoRotatePages=/None \
		-dNoOutputFonts \
		-sDEVICE=pdfwrite -r600 \
		-sOutputFile=$@ $^

%.xdv: %.tex
	$(RM) $(subst .tex,.aux,$<) $(subst .tex,.toc,$<)
	xelatex -no-pdf $^

%.pdf: %.xdv
	xdvipdfmx -r 600 -E -z 9 -V 7 -o $@ $^

%.ps: %.dvi
	dvips -D 600 -j -Ppdf -o $@ $^

%.eps: %.ps
	ps2eps -r 600 $^

%.eps: %.png
	convert $^ $@

%.pdf: %.eps
	epstopdf --res=600 --hires --gsopt=-dCompatibilityLevel=1.7 $^ $@

%.pdf: %.ps
	ps2pdf -r600 $^ $@

%.eps: %.vcf
	qrencode -o $@ -t EPS -l L -m 0 <$^

%.png: %.vcf
	qrencode -o $@ -l L -s 1 -m 0 <$^

%.gif: %.png
	convert $^ $@

%.jpg: %.png
	convert -quality 99 $^ $@

%.txt: %.pdf
	pdftotext -layout $^ $@

clean:
	$(RM) git-revision.tex
	$(RM) *.aux *.dvi *.gif *.idx *.ilg *.ind *.jpg *.log *.out \
		*.pdf *.png *.ps *.txt *.toc *.xdv *.ent *.tmp *.zip \
		*.cache

.PHONY: build all clean pdf print signed distilled outlined zip
