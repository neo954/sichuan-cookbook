OUTPUT_BASENAME := sichuan-cookbook

build: pdf

all: pdf

pdf: $(OUTPUT_BASENAME).pdf

sichuan-cookbook.xdv: sichuan-cookbook.tex cookbook.cls \
	git-revision.tex front-cover.tex cover-illustration.pdf \
	chairman-mao-quotes.tex title-page.tex preface.tex \
	$(wildcard recipe-*.tex) \
	back-cover.tex back-cover-sheet.pdf
	xelatex -no-pdf $< $(word 2, $^)
	xelatex -no-pdf $< $(word 2, $^)
	xelatex -no-pdf $< $(word 2, $^)

git-revision.tex: $(wildcard *.cls) $(wildcard *.tex)
	echo '% Autogenerated, do not edit' >$@
	echo '\\newcommand{\\gitcommithash}{'`git log -1 \
		--format=%H`'}' >>$@
	echo '\\newcommand{\\gitauthordate}{'`git log -1 \
		--format=%ai --date=short`'}' >>$@

back-cover-sheet.xdv: back-cover-sheet.tex back-cover-background.pdf
	xelatex -no-pdf $<

back-cover-background.pdf: back-cover-background.eps

cover-illustration.pdf: cover-illustration.eps

%.xdv: %.tex
	xelatex -no-pdf $^

%.pdf: %.xdv
	xdvipdfmx -r 600 -o $@ $^

%.ps: %.dvi
	dvips -D 600 -j -Ppdf -o $@ $^

%.eps: %.ps
	ps2eps $^

%.eps: %.png
	convert $^ $@

%.pdf: %.eps
	epstopdf --res=600 $^ $@

%.pdf: %.ps
	ps2pdf -r600 $^ $@

%.png: %.pdf
	pdftoppm -r 600 -gray -png $^ >$@

%.eps: %.vcf
	qrencode -o $@ -t EPS -l L -m 0 <$^

%.png: %.vcf
	qrencode -o $@ -l L -s 1 -m 0 <$^

%.gif: %.png
	convert $^ $@

%.jpg: %.png
	convert -quality 99 $^ $@

%.txt: %.pdf
	pdftotext -layout $^ $@

clean:
	$(RM) git-revision.tex
	$(RM) *.aux *.dvi *.gif *.idx *.ilg *.ind *.jpg *.log *.out \
		*.pdf *.png *.ps *.txt *.toc *.xdv *.ent

.PHONY: all build clean pdf
