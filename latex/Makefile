OUTPUT_BASENAME := sichuan-cookbook

build: pdf

all: pdf

pdf: $(OUTPUT_BASENAME).pdf book-cover.pdf

sichuan-cookbook.xdv: sichuan-cookbook.tex cookbook.cls \
	git-revision.tex front-cover.tex cover-illustration.pdf \
	inside-front-cover.tex title-page.tex cooking-machine.png \
	copyright.tex chairman-mao-quotes.tex title-page-1972.tex \
	preface.tex $(wildcard recipe-*.tex) collation-notes.tex \
	inside-back-cover.tex back-cover.tex quux-logo.pdf \
	illustration-001.pdf illustration-002a.pdf illustration-002b.pdf \
	illustration-002c.pdf illustration-003.pdf illustration-004.pdf \
	illustration-005.pdf illustration-006.pdf illustration-007.pdf \
	illustration-008.pdf illustration-009.pdf illustration-010.pdf \
	illustration-011.pdf back-cover-background.pdf
	$(RM) $(subst .tex,.aux,$<)
	xelatex -no-pdf $< $(word 2,$^)
	xelatex -no-pdf $< $(word 2,$^)
	xelatex -no-pdf $< $(word 2,$^)

git-revision.tex: $(wildcard *.cls) \
	$(filter-out git-revision.tex, $(wildcard *.tex))
	echo '% Autogenerated, do not edit' >$@
	echo '\\newcommand{\\gitcommitname}{'`git describe --tags \
		$$(git log -1 --format=%H)`'}' >>$@
	echo '\\newcommand{\\gitcommithash}{'`git log -1 \
		--format=%H`'}' >>$@
	echo '\\newcommand{\\gitcommitterdate}{'`git log -1 \
		--format=%ci --date=short`'}' >>$@
	echo '\\newcommand{\\pdfbuilddate}{'`date \
		"+%Y-%m-%d %H:%M:%S %z"`'}' >>$@
	echo '\\newcommand{\\pdfbuildhost}{'`hostname -s`'}' >>$@

book-cover.xdv: book-cover.tex git-revision.tex sichuan-cookbook.pdf

%.xdv: %.tex
	$(RM) $(subst .tex,.aux,$<)
	xelatex -no-pdf $^

%.pdf: %.xdv
	xdvipdfmx -r 600 -E -z 9 -o $@ $^

%.ps: %.dvi
	dvips -D 600 -j -Ppdf -o $@ $^

%.eps: %.ps
	ps2eps $^

%.eps: %.png
	convert $^ $@

%.pdf: %.png
	convert $^ $@

%.pdf: %.eps
	epstopdf --res=600 $^ $@

%.pdf: %.ps
	ps2pdf -r600 $^ $@

%.png: %.pdf
	pdftoppm -r 600 -gray -png $^ >$@

%.eps: %.vcf
	qrencode -o $@ -t EPS -l L -m 0 <$^

%.png: %.vcf
	qrencode -o $@ -l L -s 1 -m 0 <$^

%.gif: %.png
	convert $^ $@

%.jpg: %.png
	convert -quality 99 $^ $@

%.txt: %.pdf
	pdftotext -layout $^ $@

clean:
	$(RM) git-revision.tex
	$(RM) *.aux *.dvi *.gif *.idx *.ilg *.ind *.jpg *.log *.out \
		*.pdf *.ps *.txt *.toc *.xdv *.ent

.PHONY: all build clean pdf
