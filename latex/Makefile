OUTPUT_BASENAME := sichuan-cookbook

build: pdf

all: pdf

pdf: $(OUTPUT_BASENAME).pdf

sichuan-cookbook.xdv: sichuan-cookbook.tex cookbook.cls \
	chairman-mao-quotes.tex title.tex foreword.tex \
	$(wildcard recipe-*.tex)

	echo '% Autogenerated, do not edit' >git-revision.tex
	echo '\\newcommand{\\gitcommithash}{'`git log -1 \
		--format=%H`'}' \
		>>git-revision.tex
	echo '\\newcommand{\\gitauthordate}{'`git log -1 \
		--format=%ai --date=short`'}' \
		>>git-revision.tex

	xelatex -no-pdf $< $(word 2, $^)
	xelatex -no-pdf $< $(word 2, $^)

%.xdv: %.tex
	xelatex -no-pdf $^

%.pdf: %.xdv
	xdvipdfmx -r 600 $^

%.ps: %.dvi
	dvips -D 600 -j -Ppdf -o $@ $^

%.eps: %.ps
	ps2eps $^

%.eps: %.png
	convert $^ $@

%.pdf: %.ps
	ps2pdf -r600 $^ $@

%.png: %.pdf
	pdftoppm -r 600 -gray -png $^ >$@

%.eps: %.vcf
	qrencode -o $@ -t EPS -l L -m 0 <$^

%.png: %.vcf
	qrencode -o $@ -l L -s 1 -m 0 <$^

%.gif: %.png
	convert $^ $@

%.jpg: %.png
	convert -quality 99 $^ $@

%.txt: %.pdf
	pdftotext -layout $^ $@

clean:
	$(RM) git-revision.tex
	$(RM) *.aux *.dvi *.eps *.gif *.idx *.ilg *.ind *.jpg *.log *.out \
		*.pdf *.png *.ps *.txt *.toc *.xdv

.PHONY: all build clean pdf
